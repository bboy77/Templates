@page
@model MultiProjectApplicationEx.RazorPagesUI.Pages.TodoItems.DetailsModel

@{
    ViewData["Title"] = "TodoItem Details";
}

<div class="card col-lg-10">
    <div class="card-header">
        <div class="card-title">
            <svg><use xlink:href="#DatabaseDetailsView"></use></svg>
            <span>TodoItem Details</span>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TodoItem.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TodoItem.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TodoItem.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TodoItem.Description)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-page="./Edit" asp-route-id="@Model.TodoItem.Id" class="btn btn-edit">
            <svg><use xlink:href="#EditDatabaseButton"></use></svg>
            <span>Edit</span>
        </a>
        <a asp-page="./Index" class="btn btn-back">
            <svg><use xlink:href="#BackToResultList"></use></svg>
            <span>Back to TodoItems</span>
        </a>
    </div>
</div>