@page
@model MultiProjectApplicationEx.RazorPagesUI.Pages.TodoItems.DeleteModel
@{
    ViewData["Title"] = "Delete TodoItem";
}

<div class="card col-lg-10">
    <div class="card-header">
        <div class="card-title">
            <svg><use xlink:href="#DeleteTableRow"></use></svg>
            <span>Delete TodoItem</span>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoItem!.Name)
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TodoItem!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TodoItem!.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TodoItem!.Description)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form method="post" id="DeleteForm">
            <input type="hidden" asp-for="TodoItem!.Id" />
        </form>
        <button type="submit" class="btn btn-delete" form="DeleteForm">
            <svg><use xlink:href="#DeleteTableRowButton"></use></svg>
            <span>Delete</span>
        </button>
        <a asp-page="./Index" class="btn btn-back">
            <svg><use xlink:href="#BackToResultList"></use></svg>
            <span>Back to TodoItems</span>
        </a>
    </div>
</div>